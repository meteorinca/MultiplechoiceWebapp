rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users collection - allow read/write for user management
    // Note: This app uses custom authentication, so we can't use request.auth
    // For production, consider adding additional security measures
    match /users/{userId} {
      allow read, write: if true;
    }
    
    // Exams collection - allow read/write for exam management
    match /exams/{examId} {
      allow read, write: if true;
    }
    
    // Sessions collection - allow read/write for session logging
    match /sessions/{sessionId} {
      allow read, write: if true;
    }
    
    // Attempts collection - allow read/write for attempt logging
    match /attempts/{attemptId} {
      allow read, write: if true;
    }
  }
}

